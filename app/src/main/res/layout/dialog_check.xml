<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.haiyangroup.scampus.util.CircleImageView
            android:id="@+id/head_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/photo_call_girl" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="胡洁"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="03.1-03.4 共一天"
            android:textColor="@color/hint_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/day"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="事假审批 【理由：参加婚礼】"
            android:textColor="@color/hint_color"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/line"
            android:layout_below="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="审核通过"
                android:textSize="17dp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:padding="17dp"
                android:drawableLeft="@drawable/btn_leave_pass_on"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/noPass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="审核未通过"
                android:textColor="@color/text_color"
                android:padding="17dp"
                android:textSize="17dp"
                android:drawableLeft="@drawable/btn_leave_no_pass"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/separator_line"
            android:layout_below="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/pick_background"/>
        <LinearLayout
            android:layout_below="@+id/separator_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textColor="@color/color_primary_green"
                android:textSize="17dp"
                android:gravity="center"
                android:padding="17dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/pick_background"/>
            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="@color/text_color"
                android:padding="17dp"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>