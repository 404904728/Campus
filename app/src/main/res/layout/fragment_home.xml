<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:layout_marginBottom="65dp">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/convenientBanner"
        android:layout_width="match_parent"
        android:layout_height="165dp" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/convenientBanner"
        android:background="@color/transparent_black"
        android:text="我院教师出国进修"
        android:paddingTop="1dp"
        android:paddingLeft="17dp"
        android:paddingRight="50dp"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="13sp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:id="@+id/notice_layout"
        android:layout_width="fill_parent"
        android:layout_height="31dp"
        android:layout_below="@+id/convenientBanner"
        android:background="@color/white"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_marginLeft="18dp"
            android:src="@drawable/icon_notice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:text="学校公告:  "
            android:textColor="@color/notice_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/notice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="厦门技师学院招聘"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/notice_color"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/separator"
        android:layout_below="@id/notice_layout"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/separator"/>
    <ScrollView
        android:layout_below="@id/separator"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/home_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@color/white">

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
