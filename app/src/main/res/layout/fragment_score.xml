<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_back"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/course"
        android:layout_width="fill_parent"
        android:layout_height="63dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:text="科目"
            android:textColor="@color/text_color"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/arrow1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/icon_arrow" />

        <TextView
            android:id="@+id/tv_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrow1"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="@color/hint_color"
            android:textSize="17sp" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_alignParentBottom="true"
            android:background="@color/home_back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/examination"
        android:layout_width="fill_parent"
        android:layout_height="63dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:text="考试"
            android:textColor="@color/text_color"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/arrow2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/icon_arrow" />

        <TextView
            android:id="@+id/tv_examination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrow2"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="@color/hint_color"
            android:textSize="17sp" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_alignParentBottom="true"
            android:background="@color/home_back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/className"
        android:layout_width="fill_parent"
        android:layout_height="63dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:text="班级"
            android:textColor="@color/text_color"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/arrow3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/icon_arrow" />

        <TextView
            android:id="@+id/tv_classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrow3"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="@color/hint_color"
            android:textSize="17sp" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_alignParentBottom="true"
            android:background="@color/home_back" />
    </RelativeLayout>

    <Button
        android:id="@+id/query"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:text="查询"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/button_style"/>
</LinearLayout>
